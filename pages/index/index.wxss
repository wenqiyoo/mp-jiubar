/* pages/landing/landing.wxss */

.banner {
  background-size: cover;
  background-position: center;
  padding: 150px 0;
}

view .h1 {
  margin: 0;
  color: white;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
  font-size: 50rpx;
  font-weight: bold;
}

text {
  font-size: 40rpx;
  color: white;
  opacity: .7;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
}
.btn {
  color: white;
  padding: 8px 24px;
  border-radius: 4px;
  background: #1EDD88;
  transition: background 0.3s ease;
}