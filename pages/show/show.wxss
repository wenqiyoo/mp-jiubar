.navbar {
  position: fixed;
  bottom: 20px;
  min-width: 100%;
}

.description {
  border-radius: 8px;
  box-shadow: 0px 0px 15px rgba(200,200,200,0.6);
  height: 250px;
  padding: 3px 10px;
}

.description-title {
  font-size: 1.1rem;
  font-weight: bold;
  text-align: center;
  margin-bottom: 5px;
}

.map {
  font-size: 1rem;
  width: 1rem;
  height: 1rem;
  display: inline-block;
  position: absolute;
  right: 45px;
}

.not-map {
  font-size: 1rem;
  width: 1rem;
  height: 1rem;
  display: inline-block;
  position: absolute;
  right: 20px;
}

.catering-top {
  border-radius: 8px;
  background-color: white;
  box-shadow: 0px 0px 15px rgba(200,200,200,0.6);
  margin-bottom: 5px;
  padding: 5px 0;

}


