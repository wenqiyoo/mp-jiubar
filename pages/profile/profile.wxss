button { 
  font-size: 1rem !important;
  color: white;
  background-color: #4C95FB;
  padding: 7px 40px !important;
}

.body {
  padding: 10rpx 10rpx;
}

.user-card {
  height: 100px;
  background-image: linear-gradient(35deg, #4C95FB, #4C95FB);
  border-radius: 20rpx;
  position: relative;
  display: flex;
  align-items: center;
  padding: 0 25rpx;
}

.user-info {
  margin-left: 20rpx;

}

.profile-image {
  border-radius: 50%;
  width: 150rpx;
  height: 150rpx;
  border: 2px solid white;
}

.h2 {
  font-weight: bold;
  font-size: 1.2rem;
  color: white;
}

.user-detail {
  color: white;
}

.user-settings {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.user-settings text {
  color: white;

}
.options {
  margin: 50rpx 0;
}
.profile-options {
  box-shadow: 3rpx 3rpx 5rpx rgba(233,233,233,0.3);
  height: 50rpx;
  padding: 15rpx 10rpx;
  margin-bottom: 5rpx;
  border-radius: 8rpx;
}